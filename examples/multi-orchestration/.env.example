# Developer Sentinel - Multi-Orchestration Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Jira API Configuration
# =============================================================================
# Needed for Jira-triggered workflows (code-review, docs-update)

JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# =============================================================================
# REQUIRED - GitHub Configuration
# =============================================================================
# Needed for GitHub-triggered workflows and GitHub tool access

# GitHub Personal Access Token with repo and project access
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:project
GITHUB_TOKEN=ghp_your-github-token

# =============================================================================
# OPTIONAL - Sentinel Configuration
# =============================================================================

# Seconds between polls (default: 60)
SENTINEL_POLL_INTERVAL=60

# Maximum concurrent orchestration executions (default: 1)
# Increase for parallel processing of multiple workflows
SENTINEL_MAX_CONCURRENT_EXECUTIONS=3

# Maximum issues to process per poll cycle (default: 50)
SENTINEL_MAX_ISSUES=50

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
SENTINEL_LOG_LEVEL=INFO

# Enable JSON log format for log aggregation (default: false)
SENTINEL_LOG_JSON=false

# Base directory for agent working directories (default: ./workdir)
SENTINEL_AGENT_WORKDIR=./workdir

# Base directory for agent execution logs (default: ./logs)
SENTINEL_AGENT_LOGS_DIR=./logs

# =============================================================================
# OPTIONAL - Rate Limiting
# =============================================================================
# Protect against runaway API costs

# Enable rate limiting (default: true)
SENTINEL_CLAUDE_RATE_LIMIT_ENABLED=true

# Maximum requests per minute (default: 60)
SENTINEL_CLAUDE_RATE_LIMIT_PER_MINUTE=60

# Maximum requests per hour (default: 1000)
SENTINEL_CLAUDE_RATE_LIMIT_PER_HOUR=1000
